---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="FullSnack - Cart" headerText="Cart">
	<Fragment slot="header">
		<div class="header">
			<a class="header-home-button" href="/">
				<i class="ph-fill ph-house-line header-home-icon"></i>
				<span class="header-home-text">back to home</span>
			</a>
		</div>
	</Fragment>

	<h1>cart</h1>

	<button id="floating-order-button" class="floating-order-button">
		<i class="ph-fill ph-package floating-order-icon"></i>
		<span class="floating-order-text">order</span>
	</button>
</MainLayout>

<script>
	const floatingOrderButtonEl = document.getElementById(
		"floating-order-button",
	);

	// TODO add order to backend then go to summary page
	floatingOrderButtonEl.addEventListener("click", () => {
		location.href = "/summary";
	});
</script>

<style>
	.header {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: end;
		align-items: center;
	}

	.header-home-button {
		transition: opacity 0.5s ease-in-out;
		opacity: 0.6;
		height: 100%;
		padding: 0.25rem 0.5rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		border-radius: 0.25rem;
		box-shadow:
			0px 1.3px 2.2px rgba(0, 0, 0, 0.008),
			0px 3.2px 5.3px rgba(0, 0, 0, 0.012),
			0px 6px 10px rgba(0, 0, 0, 0.015),
			0px 10.7px 17.9px rgba(0, 0, 0, 0.018),
			0px 20.1px 33.4px rgba(0, 0, 0, 0.022),
			0px 48px 80px rgba(0, 0, 0, 0.03);
	}

	.header-home-button:hover {
		opacity: 1;
	}

	.header-home-icon {
		font-size: 2rem;
		display: flex;
	}

	.header-home-text {
		display: block;
		margin-top: 3px;
		text-transform: uppercase;
		font-size: 1.5rem;
		font-weight: bold;
	}

	.floating-order-button {
		position: fixed;
		right: 1rem;
		bottom: 1rem;
		z-index: 50;
		padding: 0.25rem 0.5rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background-color: var(--color-base-100);
		color: var(--color-base-content);
		border: 0.15rem solid var(--color-neutral);
		border-radius: 0.25rem;
		box-shadow:
			0px 1.3px 2.2px rgba(0, 0, 0, 0.008),
			0px 3.2px 5.3px rgba(0, 0, 0, 0.012),
			0px 6px 10px rgba(0, 0, 0, 0.015),
			0px 10.7px 17.9px rgba(0, 0, 0, 0.018),
			0px 20.1px 33.4px rgba(0, 0, 0, 0.022),
			0px 48px 80px rgba(0, 0, 0, 0.03);
	}

	.floating-order-icon {
		font-size: 2rem;
		display: flex;
	}

	.floating-order-text {
		text-transform: uppercase;
		font-size: 1.5rem;
		font-weight: bold;
	}
</style>
