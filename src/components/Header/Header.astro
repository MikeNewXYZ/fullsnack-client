---
const { headerText } = Astro.props;
---

<div class="container">
	<header class="header">
		<div class="header-container">
			<a class="header-icon" href="/"><i class="ph-fill ph-stack"></i></a>
			<h1 class="header-text">{headerText}</h1>
		</div>

		<div class="content">
			<slot />
		</div>
	</header>
</div>

<!-- This element is to prevent main content being hidden behind fixed header -->
<aside class="fake-header"></aside>

<style>
	.container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		padding: 0.5rem;
	}

	.fake-header {
		width: 100%;
		opacity: 0;
		pointer-events: none;
		margin-bottom: 5rem;
	}

	.header {
		display: flex;
		align-items: center;
		gap: 1rem;
		width: 100%;
		height: 4rem;
		background-color: var(--color-neutral);
		color: var(--color-neutral-content);
		border-radius: 0.5rem;
		padding: 0.5rem;
		box-shadow:
			0px 2.4px 2.2px rgba(0, 0, 0, 0.014),
			0px 5.9px 5.3px rgba(0, 0, 0, 0.02),
			0px 11px 10px rgba(0, 0, 0, 0.025),
			0px 19.7px 17.9px rgba(0, 0, 0, 0.03),
			0px 36.8px 33.4px rgba(0, 0, 0, 0.036),
			0px 88px 80px rgba(0, 0, 0, 0.05);
	}

	.header-container {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.header-icon {
		font-size: 2.5rem;
		display: flex;
	}

	.header-text {
		font-size: 2.5rem;
		font-weight: bold;
		text-transform: uppercase;
	}

	.content {
		flex-grow: 1;
		height: 100%;
	}
</style>
